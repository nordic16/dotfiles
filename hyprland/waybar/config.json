            "1": ["HDMI-A-1"],
            "2": ["HDMI-A-1"],
            "3": ["HDMI-A-1"],
            "4": ["HDMI-A-1"],
            "5": ["HDMI-A-1"],
            "6": ["DP-2"],
            "7": ["DP-2"],
            "8": ["DP-2"],
            "9": ["DP-2"],
            "10": ["DP-2"]
         },
         "disable-scroll": true,
         "warp-on-scroll": true,
         "format": "{name}",
